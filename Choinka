#include <iostream>
#include <string>

using namespace std;

int y,yy=1,z=0,i=0;
const char znak='*';

int main()
{
    cout<<"Podaj Długość Choinki";
    cin >> y;
    string tablica[y];
    tablica[0] = znak;
    for(int b=1; b<=y-1;b++){
        tablica[yy]= tablica[b-1]+"**";
        yy++;
    }
    cout<<tablica[i]<<endl;
    }
    for(;z<=y-i;z++){
        cout<<" ";
    }
    cout<<"|_|"<<endl;
    return 0;
}
